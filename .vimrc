filetype plugin on

set grepprg=grep\ -nH\ $*
filetype indent on

let g:tex_flavor='latex'
let g:rubycomplete_rails = 1
set linebreak
set expandtab
set smarttab
set softtabstop=2
set ai
set selectmode=mouse
set nu
set guifont=monospace\ 8
set nocompatible
set textwidth=120
" allow backspacing over everything in insert mode
set backspace=indent,eol,start

" " enable code folding
set foldenable
set foldmethod=indent
set foldlevel=100
set foldopen-=search
set foldopen-=undo

set paste
set smartindent
set nobackup
set number
"set nowrap
set nobackup
set history=10
set ruler
set showcmd
set incsearch
set hlsearch
set tabstop=2
set shiftwidth=2
set tabstop=2
"
 syntax on
"
 colorscheme nightwish 
"
"
